{
    "env": {
        "browser": false,
        "node": true,
        "es6": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "one-var": [
            "error",
            "never"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eol-last": [
            "error",
            "unix"
        ]
    }
}